<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <link rel="stylesheet" href="/customstyle.css">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="manifest" href="/manifest.json">
  <link rel="icon" href="https://subject.hkugac.edu.hk/newsletter/images/logo.jpg">
  <title>College Insider Admin View</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Insider b2, welcome back <%= id %></h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>
    <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h6 class="card-title"><%= article.title.replace(/\\u[\dA-F]{4}/gi, function(match) {
            return String.fromCharCode(parseInt(match.replace(/\\u/g, ''), 16));
          }) %></h6>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %> - <%= article.author.replace(/\\u[\dA-F]{4}/gi, function(match) {
              return String.fromCharCode(parseInt(match.replace(/\\u/g, ''), 16));
            }) %>
          </div>
          <div class="text-muted card-text mb-2"><%= article.description.replace(/\\u[\dA-F]{4}/gi, function(match) {
            return String.fromCharCode(parseInt(match.replace(/\\u/g, ''), 16));
          }) %></div>
          <a href="articles/<%= article.slug %>" class="btn btn-secondary">Read More</a>
            <!-- <div class="limit">
                <%- article.sanitizedHtml %>
            </div> -->
          <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
          <h6></h6>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="post">
              <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">Delete</button>
            </form>
        </div>
      </div>
    <% }) %>
  </div>
  <p><br></p>
  <%- include('../articles/_footer') %>
</body>
</div>
</html>