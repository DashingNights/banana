	<a href="/profiles" class="<%= req.path === '/profiles' ? 'active' : '' %>"
		><div class="profile-image-container">
			<img class="pfp" id="profile-image" />
		</div>
	</a>
	<script>
		const profileImage = document.getElementById("profile-image");
		profileImage.src = "https://static-00.iconduck.com/assets.00/profile-circle-icon-1023x1024-ucnnjrj1.png";
		fetch("/userinfo")
			.then((response) => response.json())
			.then((data) => {
				if (data && data.picture) {
					const pictureUrl = data.picture;
					profileImage.src = pictureUrl;
				} else {
					profileImage.src = "https://static-00.iconduck.com/assets.00/profile-circle-icon-1023x1024-ucnnjrj1.png";
				}
			})
			.catch((error) => console.error(error));
	</script>
