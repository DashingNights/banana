<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/cdn/css/bootstrap.min.css" />
		<link rel="stylesheet" href="/cdn/css/customstyle.css" />
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<link rel="manifest" href="/manifest.json" />
		<link rel="icon" href="/cdn/logo.jpg" />
		<title>College Insider Admin View</title>
	</head>
	<body>
		<div class="container">
			<div class="d-flex justify-content-start"><a href="/articles/new" class="btn btn-success">New Article</a></div>
			<p></p>
			<%- include('_AdminScrollView') %>

			<p><br /></p>
			<%- include('../_footer') %>
		</div>
	</body>
	<script>
		const searchInput = document.getElementById("search");
		const articles = document.querySelectorAll(".card");

		searchInput.addEventListener("input", () => {
			const searchQuery = searchInput.value.toLowerCase();

			articles.forEach((article) => {
				const title = article.querySelector(".card-title").textContent.toLowerCase();
				const content = article.querySelector(".card-text").textContent.toLowerCase();
				const hashtags = article.querySelector(".text-muted").textContent.toLowerCase();
				const author = article.querySelector(".card-text").textContent.toLowerCase();

				if (title.includes(searchQuery) || content.includes(searchQuery) || hashtags.includes(searchQuery) || author.includes(searchQuery)) {
					article.style.display = "block";
				} else {
					article.style.display = "none";
				}
			});
		});
	</script>
</html>
